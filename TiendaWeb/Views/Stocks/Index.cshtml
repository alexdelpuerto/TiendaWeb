@model IEnumerable<TiendaWeb.Models.Producto>

@{
    ViewBag.Title = "Index";

}

<h2>Stock</h2>

<table class="table">
    <tr>
        <th>
            Stock_Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            Producto_Id
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stock.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Stock.Id })
            </td>
        </tr>
    }

</table>
